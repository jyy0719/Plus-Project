<tiles-definitions>
<definition name="base" template="/WEB-INF/views/include/template.jsp"> 
	<put-attribute name="header" value="/WEB-INF/views/include/header.jsp" /> 
	<put-attribute name="body" value="" /> 
	<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" /> 
</definition>

  
<!-- 로그인 , 로그아웃-->
    <definition name="*.login" extends="base"> 
     <put-attribute name="body" value="/WEB-INF/views/login/{1}.jsp" /> 
  </definition>

<!-- 멤버 정보수정, 리스트 조회-->
    <definition name="*.member" extends="base"> 
     <put-attribute name="body" value="/WEB-INF/views/member/{1}.jsp" /> 
  </definition>
  
  <!-- 회원가입페이지 특정 헤더 사용 -->
    <definition name="memberJoin" extends="base"> 
      <put-attribute name="header" value="/WEB-INF/views/include/joinHeader.jsp" />   
     <put-attribute name="body" value="/WEB-INF/views/member/memberJoin.jsp" /> 
    <put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />   
  </definition>
  
  <definition name="*.page" extends="base"> 
  	<put-attribute name="body" value="/WEB-INF/views/club/{1}.jsp" /> 
  </definition>
  
  <definition name="*.main" extends="base"> 
  	<put-attribute name="body" value="/WEB-INF/views/main/{1}.jsp" /> 
  </definition>

<!-- 전문가 페이지 -->
   <definition name="expert.*" template="/WEB-INF/views/main/expert.jsp"> 		
    <put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />	
<put-attribute name="body" value="/WEB-INF/views/main/expertPlus.jsp" />	
    <put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />	
  </definition>	
  
 
 <definition name="mypage" template="/WEB-INF/views/include/mytemplate.jsp"> 
   <put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />
   <put-attribute name="aside" value="/WEB-INF/views/mypage/inc/aside.jsp" />
   <put-attribute name="body" value="" /> 
   <put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" /> 
</definition> 
  

  <definition name="*.reviews" extends="mypage"> 
     <put-attribute name="body" value="/WEB-INF/views/mypage/reviews/{1}.jsp" /> 
  </definition>
   <definition name="*.point" extends="mypage"> 
     <put-attribute name="body" value="/WEB-INF/views/mypage/point/paymentList.jsp" /> 
  </definition>
  
    <definition name="*.heart" extends="mypage"> 
     <put-attribute name="body" value="/WEB-INF/views/mypage/heart/{1}.jsp" /> 
  </definition>
  
  <definition name="*.inqu" extends="mypage"> 
     <put-attribute name="body" value="/WEB-INF/views/mypage/inquiry/{1}.jsp" /> 
  </definition>
  
    <!-- 관리자페이지 -->
    
  <definition name="admin" template="/WEB-INF/views/include/mytemplate.jsp"> 
   <put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />
   <put-attribute name="aside" value="/WEB-INF/views/admin/inc/aside.jsp" />
   <put-attribute name="body" value="" /> 
   <put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" /> 
</definition>   

  <definition name="*.adinqu" extends="admin">
    <put-attribute name="body" value="/WEB-INF/views/admin/inquiry/{1}.jsp" /> 
  </definition>
  
  <definition name="*.adch" extends="admin">
    <put-attribute name="body" value="/WEB-INF/views/admin/{1}.jsp" /> 
  </definition>
  
 <definition name="*.ann" extends="base">
